<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="textOnPrimary">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="colorHint">@color/colorHint</item>
        <item name="colorBackground">@color/colorBackground</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:textColor">?attr/textOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="iconTint">?attr/textOnPrimary</item>
    </style>

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">?attr/cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">?attr/cornerRadius</item>
        <item name="boxCornerRadiusBottomStart">?attr/cornerRadius</item>
        <item name="boxCornerRadiusBottomEnd">?attr/cornerRadius</item>
        <item name="android:importantForAutofill" tools:targetApi="26">no</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:inputType">textCapWords</item>
        <item name="maxLines">1</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">?attr/colorAccent</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    
    <style name="RoundedCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorBackground</item>
<!--        <item name="strokeColor">?attr/colorHint</item>-->
<!--        <item name="strokeWidth">1dp</item>-->
        <item name="cardCornerRadius">?attr/cornerRadius</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="dialogCornerRadius">?attr/cornerRadius</item>
    </style>

</resources>